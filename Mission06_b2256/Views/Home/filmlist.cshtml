@{
    ViewData["Title"] = "Movie List";
}
@model List<ApplicationResponse>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited?</td>
            <td>Notes</td>
            <td>Lent to</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model) //model does need to be "Model"
        {
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Notes</td>
            <td>@x.LentTo</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-FilmID="@x.FilmID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="delete" asp-route-FilmID="@x.FilmID">Delete</a></td>

        </tr>
        }
        <tr></tr>
    </tbody>

</table>
